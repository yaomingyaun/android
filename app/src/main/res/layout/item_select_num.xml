<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:padding="15dip"
    android:layout_margin="5dip"
    android:background="@drawable/yuanjiaobeijing5"
    android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/me_under_myaccount"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <com.qiyuzhibo.phonelive.widget.BlackTextView
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/global"
                    android:layout_marginLeft="4dp"
                    android:id="@+id/tv_diamondsnum"
                    android:text="798"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>



            <com.qiyuzhibo.phonelive.widget.BlackTextView
                android:layout_marginTop="15dip"
                android:textColor="@color/black"
                android:id="@+id/bt_preice_text"
                android:layout_width="wrap_content"
                android:text="￥100"
                android:textSize="10sp"
                android:layout_height="wrap_content"/>

            <com.qiyuzhibo.phonelive.widget.BlackTextView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dip"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="充值"
                android:background="@drawable/btn_diamonds_select_num"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:layout_width="80dip"
                android:layout_height="30dip"
                />

            <com.qiyuzhibo.phonelive.widget.BlackTextView
                android:layout_marginTop="15dip"
                android:textColor="@color/black"
                android:id="@+id/tv_price_explain"
                android:layout_width="wrap_content"
                android:textSize="10sp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

</LinearLayout>