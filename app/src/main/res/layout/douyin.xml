<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent">
    <VideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false" />
    <SurfaceView
        android:id="@+id/test_surfaceView"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:layout_centerVertical="true" />
    <SeekBar
        android:id="@+id/seekbar"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:layout_width="fill_parent"/>

    <ImageView
        android:id="@+id/img_thumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:clickable="false"
        android:focusable="false"
        android:visibility="visible"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.qiyuzhibo.phonelive.widget.AvatarView
                android:id="@+id/item_tv_head"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/icon_share_png"
                />

            <ImageView
                android:id="@+id/h_guanzhu"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/icon_add"
                android:tint="@android:color/white"
                android:scaleType="centerInside"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                />
        </RelativeLayout>
        <ImageView
            android:id="@+id/dianzai"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@mipmap/icon_like_2"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/h_dx_num"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="1.6w"
            android:textColor="@android:color/white"
            android:gravity="center"
            />
        <ImageView
            android:id="@+id/pl"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@mipmap/icon_comment"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/h_xx_num"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="1.6w"
            android:textColor="@android:color/white"
            android:gravity="center"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/icon_share"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="分享"
            android:textColor="@android:color/white"
            android:gravity="center"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/img_play"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/play_arrow"
        android:alpha="0"
        android:layout_centerInParent="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"

        android:orientation="vertical"
       android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="250dp">
        <TextView
            android:id="@+id/h_time"
            android:layout_width="wrap_content"
            android:singleLine="false"
            android:textSize="14sp"
            android:layout_marginTop="120dp"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/title"
            android:text="小猪佩奇"

            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"/>
        <TextView
           android:id="@+id/data"
            android:layout_width="wrap_content"
            android:singleLine="false"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"/>
        <SeekBar
            android:id="@+id/seekbar1"
            android:layout_height="2dp"
            android:progressDrawable="@drawable/bg_adjust_seek_bar"
            android:thumb="@drawable/bg_adjust_seek_thub"
            android:layout_width="fill_parent"/>

    </LinearLayout>
    <ImageView
        android:id="@+id/iv_video_laudgif"
        android:layout_width="80dp"
        android:layout_height="80dp"
       android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:visibility="gone"
        />
</RelativeLayout>